{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": [
        "../frontend/src/app/components/*"
      ],
      "@/public/*": [
        "../frontend/public/*"
      ],
      "@/images/*": [
        "../frontend/public/images/*"
      ],
      "@/ui/*": [
        "../frontend/src/app/components/ui/*"
      ],
      "@/lib/*": [
        "../frontend/src/lib/*"
      ],
      "@/action/*": [
        "../frontend/src/actions/*"
      ],
      "@/types/*": [
        "../frontend/src/types/*"
      ],
      "@/responses/*": [
        "../frontend/src/types/responses/*"
      ],
      "@/utils/*": [
        "../frontend/src/utils/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
